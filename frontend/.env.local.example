# Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id

# Backend API base URL (without trailing /api)
# When running the backend locally via `pnpm dev` in ../backend, the API listens on http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# App origin used in email links (usually matches the frontend dev server)
NEXT_PUBLIC_APP_ORIGIN=http://localhost:3000

# Optional additional logging endpoint
# NEXT_PUBLIC_LOG_ENDPOINT=
